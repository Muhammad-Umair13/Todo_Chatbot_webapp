# ==============================================================================
# Phase II Todo API - Environment Configuration Example
# ==============================================================================
# Copy this file to .env and fill in your actual values
# Do NOT commit .env to version control!

# ==============================================================================
# Database Configuration (REQUIRED)
# ==============================================================================
# PostgreSQL database connection string
# Local development: postgresql://postgres:password@localhost:5432/todo_phase_ii
# Neon Serverless: postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/db?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/todo_phase_ii

# ==============================================================================
# JWT Authentication (REQUIRED)
# ==============================================================================
# Secret key for signing JWT tokens (MUST be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-here

# JWT Algorithm (HS256, HS384, HS512 recommended)
JWT_ALGORITHM=HS256

# JWT Audience and Issuer (should match your Better Auth configuration)
JWT_AUDIENCE=todo-api
JWT_ISSUER=better-auth

# ==============================================================================
# Application Configuration
# ==============================================================================
# Application name for logging
APP_NAME=todo-api

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# ==============================================================================
# CORS Configuration
# ==============================================================================
# Comma-separated list of allowed origins (no spaces)
# Example: http://localhost:3000,http://localhost:5173,https://yourapp.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================================================
# Phase III: AI Chatbot (Google Gemini)
# ==============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini model to use (options: gemini-2.0-flash, gemini-1.5-pro, etc.)
GEMINI_MODEL=gemini-2.0-flash

# ==============================================================================
# Database Connection Pooling
# ==============================================================================
# SQLAlchemy connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Enable SQL query logging (true/false)
DB_ECHO=false

# ==============================================================================
# Security Configuration
# ==============================================================================
# Secret key for password hashing and other cryptographic operations
SECRET_KEY=your-secret-key-for-password-hashing-change-in-production

# ==============================================================================
# Feature Flags
# ==============================================================================
# Enable/disable application features
FEATURE_REGISTRATION=true
FEATURE_PRIORITY=false
FEATURE_PROJECTS=true
FEATURE_TAGS=true
FEATURE_COMMENTS=true
FEATURE_DUE_DATES=true

# ==============================================================================
# Rate Limiting
# ==============================================================================
# API rate limiting settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==============================================================================
# Validation Rules
# ==============================================================================
# Password validation
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Email validation
EMAIL_MAX_LENGTH=255

# Task validation
TASK_TITLE_MIN_LENGTH=1
TASK_TITLE_MAX_LENGTH=200
TASK_DESCRIPTION_MAX_LENGTH=1000

# ==============================================================================
# File Upload Configuration
# ==============================================================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10

# Allowed file extensions (comma-separated, include the dot)
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt

# ==============================================================================
# Performance & Monitoring
# ==============================================================================
# Enable metrics collection
ENABLE_METRICS=false

# Enable tracing
ENABLE_TRACING=false

# Enable response compression
COMPRESS_RESPONSES=true

# Cache settings
ENABLE_CACHE=false
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# ==============================================================================
# Notification Settings
# ==============================================================================
# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=false

# ==============================================================================
# Database Backup
# ==============================================================================
# Enable automatic database backups
ENABLE_AUTO_BACKUP=false

# Backup interval in hours
BACKUP_INTERVAL_HOURS=24

# Number of days to retain backups
BACKUP_RETENTION_DAYS=30

# ==============================================================================
# Maintenance Mode
# ==============================================================================
# Enable maintenance mode (disables API access)
MAINTENANCE_MODE=false

# Message displayed when maintenance mode is active
MAINTENANCE_MESSAGE=The server is under maintenance. Please try again later.

# ==============================================================================
# Default Admin Account
# ==============================================================================
# Create admin account on first run (only if FEATURE_REGISTRATION=true)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ==============================================================================
# Analytics
# ==============================================================================
# Enable analytics tracking
ENABLE_ANALYTICS=false

# Analytics provider (none, google, mixpanel, etc.)
ANALYTICS_PROVIDER=none

# ==============================================================================
# Social Authentication
# ==============================================================================
# Enable Google OAuth
ENABLE_GOOGLE_AUTH=false

# Enable GitHub OAuth
ENABLE_GITHUB_AUTH=false

# ==============================================================================
# WebSocket Settings
# ==============================================================================
# Maximum concurrent WebSocket connections
WEBSOCKET_MAX_CONNECTIONS=100

# WebSocket ping interval in seconds
WEBSOCKET_PING_INTERVAL=30

# WebSocket timeout in seconds
WEBSOCKET_TIMEOUT=60

# ==============================================================================
# Background Task Processing
# ==============================================================================
# Maximum number of worker processes
MAX_WORKERS=4

# Task timeout in seconds
TASK_TIMEOUT=300

# Number of retry attempts for failed tasks
TASK_RETRY_ATTEMPTS=3

# Delay between retry attempts in seconds
TASK_RETRY_DELAY=60

# ==============================================================================
# Email Configuration
# ==============================================================================
# SMTP server settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# Email sender settings
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=Todo App

# ==============================================================================
# Slack Integration
# ==============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Slack username for bot messages
SLACK_USERNAME=TodoBot

# Slack emoji for bot messages
SLACK_ICON_EMOJI=:robot_face:

# ==============================================================================
# Cookie Settings
# ==============================================================================
# Use secure cookies (HTTPS only)
SECURE_COOKIES=false

# Cookie domain
COOKIE_DOMAIN=localhost

# Cookie path
COOKIE_PATH=/

# HttpOnly cookie flag
COOKIE_HTTP_ONLY=true

# SameSite cookie attribute (lax, strict, none)
COOKIE_SAME_SITE=lax
